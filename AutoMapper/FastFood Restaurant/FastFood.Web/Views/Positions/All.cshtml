@model IList<FastFood.Web.ViewModels.Positions.PositionsAllViewModel>

@{
    ViewData["Title"] = "All Positions";
}
<h1 class="text-center">All Positions</h1>
<hr class="hr-2" />
<table class="table mx-auto">
    <thead>
        <tr class="row">
            <th class="col-md-1">#</th>
            <th class="col-md-2">Position</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count(); i++)
        {
            <tr class="row">
                <th class="col-md-1">@(i + 1)</th>
                <td class="col-md-2">@Model[i].Name</td>
            </tr>
        }


    </tbody>

    


</table>
<div class="button-holder d-flex justify-content-center text-center ">
    <a asp-controller="Positions" asp-action="Create" type="submit" class="btn btn-success text-center ">Create</a>
    <a asp-controller="Home" asp-action="Index" type="submit" class="btn btn-default text-center">Back</a>
</div>