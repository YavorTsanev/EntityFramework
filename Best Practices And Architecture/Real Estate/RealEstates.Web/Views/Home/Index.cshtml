@model IEnumerable<RealEstates.Services.Models.DistrictViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome Yavor</h1>
    <h1>THE TIME IS @DateTime.Now.ToString("HH:mm")</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<table class="table table-striped table-hover table-sm">
    <tr>
        <th>Distinct</th>
        <th>PropertiesCount</th>
        <th>Avg. Price</th>
        <th>Min. Price</th>
        <th>Max. Price</th>
    </tr>
    @foreach (var district in Model)
    {
        <tr>
            <td>@district.Name</td>
            <td>@district.PropertiesCount</td>
            <td>@district.AveragePrice.ToString("0.00")€</td>
            <td>@district.MinPrice€</td>
            <td>@district.MaxPrice€</td>
        </tr>
    }
</table>
